<%= link_to "Back to Question", @question_url %>

<%= form_with model: @answer, url: question_answers_path do |f| %>
  <div style="display: flex">
    <%= f.check_box :correct, class: "h-6 w-6 text-green-500 transition duration-150 ease-in-out rounded-lg border-gray-200" %>
    <%= f.text_field :content, class: "form-field", autofocus: true, placeholder: "Enter an answer here..." %>
    <%= f.submit "Add" %>
  </div>
<% end %>
